{
    "$schema": "http://json-schema.org/draft/2020-12/schema",
    "title": "Leaflet",
    "description": "A simple leaflet format",
    "type": "object",
    "properties": {
      "medicineName": {
        "description": "The name of the medicine.",
        "type": "string"
      },
      "medicineComposition": {
        "description": "The composition of the medicine.",
        "type": "string"
      },
      "leafletText": {
        "description": "Text of the leaflet",
        "type": "string"
      },
      "medicineUses": {
        "description": "Uses of the medicine",
        "type": "string"
      },
      "medicineSideEffects": {
        "description": "Side effects of the medicine",
        "type": "string"
      },
      "recommendations": {
        "description": "Recommendations for taking the medicine",
        "type": "string"
      }
    },
    "required": ["medicineName", "medicineComposition", "recommendations"]
  }
